---
/* pages/index.astro */
/* Libraries */
import { getEntry } from "astro:content";
import Hero from "@src/components/Hero.astro";
import BaseLayout from "@src/layouts/BaseLayout.astro";
import Layout from "@src/layouts/Layout.astro";
const heroData = await getEntry("heroes", "home-hero");
if (!heroData) throw new Error("heroData is null or undefined");
---

<BaseLayout>
  <Layout>
    <Hero data={heroData} />
  </Layout>
</BaseLayout>
